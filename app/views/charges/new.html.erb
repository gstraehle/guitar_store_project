<h1>Review Order</h1>
<p>shopping cart items listed here</p>

<table>
  <thead>
    <tr>
      <th class="cart-header">Description</th>
      <th class="cart-header">Image</th>
      <th class="cart-header">Price</th>
      <th class="cart-header">Quantity</th>
      <th class="cart-header">Remove</th>
    </tr>
  </thead>

  <tbody>
    <% @order_products.each do |order_product| %>
      <tr>
        <td class="description">
          <%= link_to order_product.product do %><%= order_product.product.brand %> <%= order_product.product.model %><% end %>
        </td>
        <td class="item-image"><img src="<%= order_product.product.image %>"></td>
        <td class="price"><%= number_to_currency(order_product.unit_price) %></td>
        <td class="quantity"><%= order_product.quantity %></td>
        <td class="remove"> X </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_tag order_charges_path do %>
  <article>
    <label class="amount">
      <span><%= number_to_currency @order.total %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="A month's subscription"
          data-amount="<%= @order.total_in_pennies %>"></script>
<% end %>


