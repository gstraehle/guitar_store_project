<h1>Your Order History</h1>
<div class="row">
  <div class="col-md-8">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Order No.</th>
          <th>Processed At</th>
          <th class="text-right">Items</th>
          <th class="text-right">Total</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% current_user.orders.each do |order| %>
          <tr>
            <td><%= order.id %></td>
            <td>
              <% if order.processed_at == nil %>
                Cart (order in progress)
              <% else %>
                <%= order.processed_at.localtime.strftime("%b %d, %Y (%I:%M %p %Z)") %>
              <% end %>
            </td>
            <td class="text-right"><%= order.order_products.length %></td>
            <td class="text-right"><%= number_to_currency(order.total) %></td>
            <td class="text-center"><%= link_to 'View', order %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
