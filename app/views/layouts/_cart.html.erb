<% if user_signed_in? %>
  <div id="cart">
    <ul class="list-group" id="cart-preview">
      <li class="list-group-item">

        <% if current_user.orders.find_by(processed_at: nil) == nil %>
            <strong>Your Cart</strong>
            <span class="badge" id="item_number">0</span>
          </li>

        <% else %>
            <strong><%= link_to "Your Cart", order_path(current_user.orders.find_by(processed_at: nil).id) %></strong>
            <span class="badge" id="item_number"><%= current_user.orders.find_by(processed_at: nil).order_products.length %></span>
          </li>

          <% current_user.orders.find_by(processed_at: nil).order_products.each do |order_product| %>
            <li class="list-group-item" id="product_<%= order_product.id %>">
              <strong>
                <%= link_to order_product.product do %>
                  <%= order_product.product.brand %> <%= order_product.product.model %>
                <% end %>
              </strong><br>
              <%= number_to_currency(order_product.product.price) %>
            </li>
          <% end %>
        <% end %>

    </ul>
  </div>
<% else %> <!-- user_signed_in -->
<div></div>
<% end %> <!-- user_signed_in -->

