<div id="cart">
  <% if user_signed_in? %>
    <h4>Your Cart <span class="badge"><%= cart.order_products.length %></span></h4>
    <hr>
    <ul class="list-group">
      <% cart.order_products.each do |order_product| %>
        <li class="list-group-item">
          <strong>
            <%= link_to order_product.product do %>
              <%= order_product.product.brand %> <%= order_product.product.model %>
            <% end %>
          </strong><br>
          Quantity: <%= order_product.quantity %>
        </li>
      <% end %>
    </ul>

    <h5>Total: <%= number_to_currency(cart.total) %></h5>

  <% else %>
    <h4>Sign In</h4>
  <% end %>
</div>
