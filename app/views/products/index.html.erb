<h2>Our Guitars</h2>

<div id='original'>
  <% @products.each do |product| %>
    <div class='summary clearfix' data-category='<%= product.category if (product.category)%>' data-price='<%= product.price if (product.price)  %>'data-rating='<%= product.avg_rating if (product.avg_rating)%>'>
      <div class='description' >
        <h3><%= product.brand if (product.brand)  %> <%= product.model if (product.model)  %></h3>
        <ul>
          <li>Average Rating: <%= product.avg_rating if (product.avg_rating)  %></li>
          <li><%= product.category if (product.category)  %></li>
          <li><%= product.price if (product.price)  %></li>
          <li><%= link_to 'See more detail...', product %></li>
        </ul>
      </div>
      <div class='image'>
        <%= image_tag(product.image) %>
      </div>
    </div>
  <% end %>
</div>

